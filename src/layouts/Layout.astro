---
import "@fontsource-variable/roboto-condensed"; // Supports weights 100-900
// import Cart from '../images/icons/Cart.astro';
import Footer from "../components/Footer.astro";
import NavBar from "../components/NavBar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <NavBar />
    <slot />
    <Footer />
  </body>
  <style is:global>
    /* // Eliminamos el tri√°ngulo de los summary */
    details summary {
      list-style: none; /* Elimina el marcador en navegadores no WebKit */
    }

    details summary::-webkit-details-marker {
      display: none; /* Oculta el marcador en navegadores WebKit */
    }

    :root {
      --accent: 136, 58, 234;
      --accent-light: 224, 204, 250;
      --accent-dark: 49, 10, 101;
      --accent-gradient: linear-gradient(
        45deg,
        rgb(var(--accent)),
        rgb(var(--accent-light)) 30%,
        white 60%
      );
    }

    html {
      font-family:
        "Roboto Condensed Variable",
        Ubuntu,
        system-ui,
        -apple-system,
        BlinkMacSystemFont,
        "Segoe UI",
        Roboto,
        Oxygen,
        Cantarell,
        "Open Sans",
        "Helvetica Neue",
        sans-serif;
      scroll-behavior: smooth;
      background: #fff;
    }

    code {
      font-family:
        Menlo,
        Monaco,
        Lucida Console,
        Liberation Mono,
        DejaVu Sans Mono,
        Bitstream Vera Sans Mono,
        Courier New,
        monospace;
    }

    /* Firefox */
    * {
      scrollbar-width: thin;
      scrollbar-color: #888 #eee;
    }

    /* Chrome, Edge, Safari */
    *::-webkit-scrollbar {
      width: 8px;
      height: 8px;
    }

    *::-webkit-scrollbar-track {
      background: #eee;
    }

    *::-webkit-scrollbar-thumb {
      background-color: #888;
      border-radius: 4px;
    }
  </style>
</html>

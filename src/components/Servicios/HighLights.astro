---
import Durability from "@src/Images/icons/Durability.astro";
import Integration from "@src/Images/icons/Integration.astro";
import OptimizationResources from "@src/Images/icons/OptimizationResources.astro";
import Scalability from "@src/Images/icons/Scalability.astro";
import HightLight from "./Sections/HightLight.astro";
---

<ul
  class="relative z-50 mx-auto mt-8 flex max-w-7xl -translate-y-24 snap-x snap-mandatory gap-8 overflow-x-auto p-2"
>
  <HightLight
    color="#6E3C9F"
    title="Optimización de Recursos"
    description="Maximiza el rendimiento y la eficiencia con componentes diseñados específicamente para tus necesidades"
  >
    <OptimizationResources />
  </HightLight>
  <HightLight
    color="#33AF96"
    title="Integración Precisa"
    description="Soluciones integradas con exactitud a tus equipos y sistemas actuales"
  >
    <Integration />
  </HightLight>
  <HightLight
    color="#D03C55"
    title="Durabilidad y Confiabilidad"
    description="Componentes de alta calidad que garantizan la durabilidad y confiabilidad de tus sistemas"
  >
    <Durability />
  </HightLight>
  <HightLight
    color="#57A6B8"
    title="Escalabilidad Personalizada"
    description="Diseñado para crecer con tus proyectos, adaptable a futuras necesidades"
  >
    <Scalability />
  </HightLight>
</ul>

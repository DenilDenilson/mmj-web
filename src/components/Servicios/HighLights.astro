---
import Durability from "@src/Images/icons/Durability.astro";
import Integration from "@src/Images/icons/Integration.astro";
import OptimizationResources from "@src/Images/icons/OptimizationResources.astro";
import Scalability from "@src/Images/icons/Scalability.astro";
import HightLight from "./Sections/HightLight.astro";
import { getEntry } from "astro:content";

const { service } = Astro.params;
const specificService = await getEntry("services", `${service}`);
const { highlights = [] } = specificService?.data || {}; // Aseguramos que highlights sea un array vac√≠o en caso de null o undefined
---

<ul
  class="relative z-50 mx-auto mt-8 flex max-w-7xl -translate-y-24 snap-x snap-mandatory gap-8 overflow-x-auto p-2"
>
  <HightLight
    color="#6E3C9F"
    title={highlights[0]?.title}
    description={highlights[0]?.description}
  >
    <OptimizationResources />
  </HightLight>
  <HightLight
    color="#33AF96"
    title={highlights[1]?.title}
    description={highlights[1]?.description}
  >
    <Integration />
  </HightLight>
  <HightLight
    color="#D03C55"
    title={highlights[2]?.title}
    description={highlights[2]?.description}
  >
    <Durability />
  </HightLight>
  <HightLight
    color="#57A6B8"
    title={highlights[3]?.title}
    description={highlights[3]?.description}
  >
    <Scalability />
  </HightLight>
</ul>

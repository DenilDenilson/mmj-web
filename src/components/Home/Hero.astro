---
import HeroHome1 from "./HeroHome1.astro";
import HeroHome2 from "./HeroHome2.astro";
import HeroHome3 from "./HeroHome3.astro";
---

<section class="bg-black-800 pt-14">
  <div id="sliderControl" class="relative mx-auto max-w-7xl md:px-8">
    <input
      class="hidden"
      checked
      type="radio"
      name="heroSelector"
      id="heroSelector1"
    />
    <input class="hidden" type="radio" name="heroSelector" id="heroSelector2" />
    <input class="hidden" type="radio" name="heroSelector" id="heroSelector3" />
    <div id="heroSlider" class="overflow-x-hidden">
      <div id="heroContainer" class="flex h-fit transition-all duration-300">
        <HeroHome1 />
        <HeroHome2 />
        <HeroHome3 />
      </div>
    </div>
    <ul
      id="heroSelector"
      class="absolute bottom-8 left-0 right-0 mx-auto flex w-fit gap-4 lg:bottom-28"
    >
      <label
        for="heroSelector1"
        id="selectHero1"
        class="h-4 w-4 cursor-pointer rounded-full bg-white-200 shadow-lg transition-colors duration-200 hover:bg-secondary-400"
      >
      </label>
      <label
        for="heroSelector2"
        id="selectHero2"
        class="h-4 w-4 cursor-pointer rounded-full bg-white-200 shadow-lg transition-colors duration-200 hover:bg-secondary-400"
      >
      </label>
      <label
        for="heroSelector3"
        id="selectHero3"
        class="h-4 w-4 cursor-pointer rounded-full bg-white-200 shadow-lg transition-colors duration-200 hover:bg-secondary-400"
      >
      </label>
    </ul>
    <ul
      class="invisible absolute -bottom-20 left-0 right-0 z-50 mx-auto w-fit items-center justify-center gap-8 rounded-2xl bg-white-100 bg-opacity-90 p-8 lg:visible lg:flex"
    >
      <li
        class="flex w-44 flex-col items-center px-6 py-4 text-5xl font-bold text-secondary-500"
      >
        +30000
        <span class="text-xl font-normal text-secondary-500">Estudiantes</span>
      </li>
      <div class="h-24 w-[1px] bg-secondary-500"></div>
      <li
        class="flex w-44 flex-col items-center px-6 py-4 text-5xl font-bold text-secondary-500"
      >
        +25
        <span class="text-xl font-normal text-secondary-500">Cursos</span>
      </li>
      <div class="h-24 w-[1px] bg-secondary-500"></div>

      <li
        class="flex w-44 flex-col items-center px-6 py-4 text-5xl font-bold text-secondary-500"
      >
        +20
        <span class="text-xl font-normal text-secondary-500">Servicios</span>
      </li>
      <div class="h-24 w-[1px] bg-secondary-500"></div>

      <li
        class="flex w-44 flex-col items-center px-6 py-4 text-5xl font-bold text-secondary-500"
      >
        +50
        <span class="text-xl font-normal text-secondary-500">Proyectos</span>
      </li>
    </ul>
  </div>
</section>

<style>
  #sliderControl > input:nth-child(1):checked ~ #heroSlider > #heroContainer {
    transform: translateX(0%);
  }
  #sliderControl > input:nth-child(2):checked ~ #heroSlider > #heroContainer {
    transform: translateX(-100%);
  }
  #sliderControl > input:nth-child(3):checked ~ #heroSlider > #heroContainer {
    transform: translateX(-200%);
  }

  #sliderControl > input:nth-child(1):checked ~ #heroSelector > :nth-child(1),
  #sliderControl > input:nth-child(2):checked ~ #heroSelector > :nth-child(2),
  #sliderControl > input:nth-child(3):checked ~ #heroSelector > :nth-child(3) {
    scale: 1.5;
    background: #4a94a0;
  }
</style>


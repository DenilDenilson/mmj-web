---
import { Image } from "astro:assets";
import Specialite1 from "@src/Images/Home/MMJ-Specilad1.png";
import Specialite2 from "@src/Images/Home/MMJ-Specilad2.png";
import Specialite3 from "@src/Images/Home/MMJ-Specilad3.png";
import Specialite4 from "@src/Images/Home/MMJ-Specilad4.png";
---

<div
  class="absolute visible md:invisible xl:visible left-0 top-96 sm:top-64 z-10 grid w-1/3 grid-cols-1 grid-rows-2 gap-8 md:top-[320px] md:w-full md:max-w-[424px] md:grid-cols-2 md:grid-rows-1 xl:top-0 xl:relative"
>
  <div class="grid grid-rows-2 gap-8 md:translate-y-8 md:max-w-[196px]">
    <div class="w-fit shadow-lg shadow-black-200 md:h-fit">
      <Image
        height={288}
        class="lg:w-full rounded"
        src={Specialite1}
        alt={"Imagen de la especialidad 1"}
      />
    </div>
    <div class="w-fit shadow-lg shadow-black-200 md:h-fit">
      <Image
        height={288}
        class="lg:w-full rounded"
        src={Specialite2}
        alt={"Imagen de la especialidad 2"}
      />
    </div>
  </div>
  <div class="grid grid-rows-2 gap-8 md:-translate-y-8 md:max-w-[196px]">
    <div class="w-fit shadow-lg shadow-black-200 md:h-fit">
      <Image
        height={288}
        class="lg:w-full rounded"
        src={Specialite3}
        alt={"Imagen de la especialidad 3"}
      />
    </div>
    <div class="w-fit shadow-lg shadow-black-200 md:h-fit">
      <Image
        height={288}
        class="lg:w-full rounded"
        src={Specialite4}
        alt={"Imagen de la especialidad 4"}
      />
    </div>
  </div>
</div>

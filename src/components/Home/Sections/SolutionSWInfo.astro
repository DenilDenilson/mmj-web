---
import { Image } from "astro:assets";
import SolutionSoftwareImage from "@src/Images/Home/SolutionSoftwareImage.webp";
import SolutionsSoftwareHero from "./SolutionsSoftwareHero.astro";
---

<div
  class="relative mb-16 bg-white-500 lg:flex lg:items-start lg:justify-center"
>
  <Image
    src={SolutionSoftwareImage}
    width={480}
    alt={"Imagen de soluciones de hardware"}
    class="absolute h-full w-full object-cover lg:relative lg:h-full lg:w-auto"
  />

---
import ChcekList from "@src/Images/icons/ChcekList.astro";
import FAQIcon from "@src/Images/icons/FAQIcon.astro";
import Start from "@src/Images/icons/Start.astro";
import SunScreen from "@src/Images/icons/SunScreen.astro";
import AcercaDe from "./Sections/AcercaDe.astro";
import FAQ from "./Sections/FAQ.astro";
import PerfilEgresado from "./Sections/PerfilEgresado.astro";
import Requisitos from "./Sections/Requisitos.astro";
---

<section class="lg:min-w-2xl lg:flex-1">
  <div class="mx-auto max-w-7xl px-7 pb-16 pt-8">
    <div id="sliderCourse" class="flex flex-col-reverse">
      <input
        class="hidden"
        name="sliderCourse"
        id="sliderCourse1"
        type="radio"
        checked
      />
      <input
        class="hidden"
        name="sliderCourse"
        id="sliderCourse2"
        type="radio"
      />
      <input
        class="hidden"
        name="sliderCourse"
        id="sliderCourse3"
        type="radio"
      />
      <input
        class="hidden"
        name="sliderCourse"
        id="sliderCourse4"
        type="radio"
      />

      <div id="infoCourseContainer">
        <ul class="relative">
          <!-- Hacemos realative solo al elemento que queremos mostrar y el resto se mantiene en absolute, quedando por detrÃ¡s y por ende ocultos a la vista -->
          <AcercaDe />
          <PerfilEgresado />
          <Requisitos />
          <FAQ />
        </ul>
      </div>
      <ul
        id="buttonsCourseSlider"
        class="mx-auto mb-6 flex flex-row flex-wrap items-center justify-center gap-x-8 gap-y-4 sm:gap-2 md:gap-4 lg:mx-0 lg:justify-start"
      >
        <!-- El h-[500px] es para evitar que desaparezca la sombra del span interior de las opciones -->
        <!-- El span en el interior de las opciones es para que la sombra de las opciones no se superponga al article -->
        <label
          for="sliderCourse1"
          class="project-options relative z-30 flex gap-1 text-sm font-medium text-black-500 hover:text-secondary-500"
        >
          <SunScreen fill="#1F2937" width="20" height="20" />
          <span class="cursor-pointer font-medium text-black-300">
            Acerca del curso
          </span>
          <span
            class="invisible absolute -bottom-1 left-0 h-1 w-20 bg-[#33AF96]"
          >
          </span>
        </label>
        <label
          for="sliderCourse2"
          class="project-options relative z-30 flex gap-1 text-sm font-medium text-black-500 hover:text-secondary-500"
        >
          <Start />
          <span class="cursor-pointer font-medium text-black-300">
            Perfil del egresado
          </span>
          <span
            class="invisible absolute -bottom-1 left-0 h-1 w-20 bg-[#33AF96]"
          >
          </span>
        </label>
        <label
          for="sliderCourse3"
          class="project-options relative flex gap-1 text-sm font-medium text-black-500 hover:text-secondary-500"
        >
          <ChcekList />
          <span class="cursor-pointer font-medium text-black-300">
            Requisitos
          </span>
          <span
            class="invisible absolute -bottom-1 left-0 h-1 w-20 bg-[#33AF96]"
          >
          </span>
        </label>
        <label
          for="sliderCourse4"
          class="project-options relative flex gap-1 text-sm font-medium text-black-500 hover:text-secondary-500"
        >
          <FAQIcon />
          <span class="cursor-pointer font-medium text-black-300"> FAQ's </span>
          <span
            class="invisible absolute -bottom-1 left-0 h-1 w-20 bg-[#33AF96]"
          >
          </span>
        </label>
      </ul>
    </div>
  </div>
</section>

<style is:global>
  #sliderCourse
    input:nth-child(1):checked
    ~ #infoCourseContainer
    > ul
    > li:nth-child(1),
  #sliderCourse
    input:nth-child(2):checked
    ~ #infoCourseContainer
    > ul
    > li:nth-child(2),
  #sliderCourse
    input:nth-child(3):checked
    ~ #infoCourseContainer
    > ul
    > li:nth-child(3),
  #sliderCourse
    input:nth-child(4):checked
    ~ #infoCourseContainer
    > ul
    > li:nth-child(4) {
    visibility: visible;
    position: relative;
    display: block;
  }

  /* Control de los border de los botones superiores */

  #sliderCourse
    input:nth-child(1):checked
    ~ #buttonsCourseSlider
    label:nth-child(1)
    span:nth-child(3),
  #sliderCourse
    input:nth-child(2):checked
    ~ #buttonsCourseSlider
    label:nth-child(2)
    span:nth-child(3),
  #sliderCourse
    input:nth-child(3):checked
    ~ #buttonsCourseSlider
    label:nth-child(3)
    span:nth-child(3),
  #sliderCourse
    input:nth-child(4):checked
    ~ #buttonsCourseSlider
    label:nth-child(4)
    span:nth-child(3) {
    visibility: visible;
  }

  /* Control de las letras de los botones superiores */
  #sliderCourse
    input:nth-child(1):checked
    ~ #buttonsCourseSlider
    label:nth-child(1)
    span:nth-child(2),
  #sliderCourse
    input:nth-child(2):checked
    ~ #buttonsCourseSlider
    label:nth-child(2)
    span:nth-child(2),
  #sliderCourse
    input:nth-child(3):checked
    ~ #buttonsCourseSlider
    label:nth-child(3)
    span:nth-child(2),
  #sliderCourse
    input:nth-child(4):checked
    ~ #buttonsCourseSlider
    label:nth-child(4)
    span:nth-child(2) {
    color: #1f2937;
  }
</style>

  <p class="mb-2 text-xl text-black-500">¿Qué incluye el Kit?</p>
  {
    kitInclude?.map((item, index) => (
      <li class="mb-3">
        <header class="text-primary-500">
          <span class="inline-block w-4">{index + 1}. </span>
          <span>{item.title}</span>
        </header>
        <p class="pl-5 font-light leading-tight text-black-500">
          {item.description}
        </p>
      </li>
    ))
  }

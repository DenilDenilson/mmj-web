---
import Argentina from "@src/Images/icons/Argentina.astro";
import Chile from "@src/Images/icons/Chile.astro";
import Paraguay from "@src/Images/icons/Paraguay.astro";

const { schedule } = Astro.props;
---

<li class="flex items-start justify-start border-t border-black-200 py-3">
  <ul class="min-w-32 xs:min-w-48">
    <!-- <li class="mb-1 flex items-center gap-2">
      <Chile />
      <span class="font-light text-black-500">Chile</span>
    </li> -->
    <li class="mb-1 flex items-center gap-2">
      <Argentina />
      <span class="font-light text-black-500">Argentina</span>
    </li>
    <li class="mb-1 flex items-center gap-2">
      <Paraguay />
      <span class="font-light text-black-500">Paraguay</span>
    </li>
  </ul>
  <ul>
    <li class="mb-1 font-light">{schedule?.days[0]} y {schedule?.days[1]}</li>
    <li class="font-normal">
      {schedule?.time[0] + 2}:00 a {schedule?.time[1] + 2}:00
    </li>
  </ul>
</li>

---
import Colombia from "@src/Images/icons/Colombia.astro";
import Ecuador from "@src/Images/icons/Ecuador.astro";
import Peru from "@src/Images/icons/Peru.astro";

const { schedule } = Astro.props;
---

<li class="flex items-start justify-start border-t border-black-200 py-3">
  <ul class="min-w-32 xs:min-w-48">
    <li class="mb-1 flex items-center gap-2">
      <Peru />
      <span class="font-light text-black-500">Per√∫</span>
    </li>
    <li class="mb-1 flex items-center gap-2">
      <Colombia />
      <span class="font-light text-black-500">Colombia</span>
    </li>
    <li class="mb-1 flex items-center gap-2">
      <Ecuador />
      <span class="font-light text-black-500">Ecuador</span>
    </li>
  </ul>
  <ul>
    <li class="mb-1 font-light">{schedule?.days[0]} y {schedule?.days[1]}</li>
    <li class="font-normal">
      {schedule?.time[0]}:00 a {schedule?.time[1]}:00
    </li>
  </ul>
</li>
